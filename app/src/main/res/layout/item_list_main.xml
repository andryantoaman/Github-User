<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rv_border"
    android:padding="10dp">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/iv_item_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        tools:src="@drawable/user1"
        app:siBorderWidth="3dp"
        app:siBorderColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tv_item_nama"
        android:textColor="@android:color/holo_green_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/iv_item_photo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="nama user"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_item_username"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:text="username"
        app:layout_constraintStart_toEndOf="@+id/iv_item_photo"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_nama" />

</androidx.constraintlayout.widget.ConstraintLayout>